<resources>
    <!-- Base application theme. -->
    <style name="Theme.GeonPpang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/Style.BottomSheetDialog</item>
        <item name="colorControlHighlight">#A9FAF7F2</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!--  ImageView Style  -->
    <style name="Radius5">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="Radius5.Top">
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
    </style>

    <!--splash-->
    <style name="Theme.GeonPpang.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.GeonPpang</item>
    </style>

    <!--  Widget  -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material.Button.Basic">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.OutlinedButton.Basic" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:width">0dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Style.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.BottomSheet</item>
    </style>

    <style name="Style.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Style.ShapeAppearance.BottomSheetDialog</item>
    </style>

    <style name="Style.ShapeAppearance.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Circle Image View -->
    <style name="Style.CircleImageView.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Material3.Chip.Style" parent="">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checked">false</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius3" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">3dp</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Bread.Filter.Category.Gray" parent="Widget.Material3.Chip.Style.Radius3">
        <item name="android:paddingVertical">4dp</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Bread.Filter.Category.Point" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">3dp</item>
        <item name="chipStrokeColor">@color/point_1</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textColor">@color/point_1</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Bread.Filter.Category.Point.M1" parent="Widget.Material3.Chip.Style.Bread.Filter.Category.Point">
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.BodyM1</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Bread.Filter.Category.Point.M2" parent="Widget.Material3.Chip.Style.Bread.Filter.Category.Point">
        <item name="android:paddingVertical">2dp</item>
        <item name="textStartPadding">6dp</item>
        <item name="textEndPadding">6dp</item>
        <item name="android:textAppearance">@style/TextAppearance.BodyM2</item>
    </style>


    <style name="Style.Material3.Chip.Station.Category" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">8dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="Style.Material3.Chip.Bakery.Filter.Category" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:stateListAnimator">@null</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="iconStartPadding">@dimen/spacing12</item>
        <item name="rippleColor">#00FFFFFF</item>
        <item name="android:paddingVertical">@dimen/spacing10</item>
        <item name="chipBackgroundColor">@color/selector_bread_lost_filter_background</item>
        <item name="iconEndPadding">4dp</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconTint">@color/selector_bread_list_filter_color</item>
        <item name="textEndPadding">@dimen/spacing12</item>
        <item name="chipStrokeColor">@color/selector_bread_list_filter_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/selector_bread_list_filter_color</item>
    </style>

    <!--    TODO style에서 제외시키기, 한 곳에서만 사용됨으로-->
    <style name="Style.Material3.Chip.Purpose.Category" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">14dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">10dp</item>
        <item name="textEndPadding">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/point_1</item>
        <item name="chipStrokeColor">@color/point_1</item>
        <item name="chipStrokeWidth">0.5dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="android:textColorHint">@color/gray_300</item>
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/spacing10</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing10</item>
    </style>

    <style name="Style.Material3.Chip.Review" parent="Widget.Material3.Chip.Style">
        <item name="android:paddingVertical">8dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="textStartPadding">16dp</item>
        <item name="textEndPadding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionB1</item>
        <item name="chipStrokeWidth">1.5dp</item>
    </style>

    <style name="Style.Material3.Chip.Review.Category" parent="Widget.Material3.Chip.Style.Radius3">
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">5dp</item>
        <item name="textEndPadding">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/point_1</item>
    </style>

    <style name="Style.CheckBox" parent="">
        <item name="android:background">@drawable/selector_my_filter_checked</item>
        <item name="android:button">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
</resources>