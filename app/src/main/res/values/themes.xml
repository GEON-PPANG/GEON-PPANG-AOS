<resources>
    <!-- Base application theme. -->
    <style name="Theme.GeonPpang" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/Style.BottomSheetDialog</item>
    </style>

    <!--  Widget  -->
    <style name="Widget.Material.Button.Basic" parent="">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.FullButton.Basic" parent="Widget.Material.Button.Basic">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="cornerRadius">11dp</item>
    </style>

    <style name="Style.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Style.BottomSheet</item>
    </style>

    <style name="Style.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/Style.ShapeAppearance.BottomSheetDialog</item>
    </style>

    <style name="Style.ShapeAppearance.BottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Circle Image View -->
    <style name="Style.CircleImageView.Half" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Material3.Chip.Style" parent="">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipStartPadding">0dp</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Widget.Material3.Chip.Style.Radius3" parent="Widget.Material3.Chip.Style">
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
        <item name="chipCornerRadius">3dp</item>
    </style>

    <!--  TODO naming 고민  -->
    <style name="Widget.Material3.Chip.Style.Radius3.Stroke" parent="Widget.Material3.Chip.Style.Radius3">
        <item name="android:paddingVertical">4dp</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="chipStrokeWidth">0.5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/gray_400</item>
    </style>

    <style name="Style.Material3.Chip.Station.Category" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">20dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <style name="Style.Material3.Chip.Purpose.Category" parent="Widget.Material3.Chip.Style">
        <item name="chipCornerRadius">14dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">10dp</item>
        <item name="textEndPadding">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.CaptionM1</item>
        <item name="android:textColor">@color/point_1</item>
        <item name="chipStrokeColor">@color/point_1</item>
        <item name="chipStrokeWidth">0.5dp</item>
    </style>
</resources>