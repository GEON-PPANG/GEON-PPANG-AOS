<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sopt.geonppang.presentation.filter.FilterViewModel" />

        <import type="com.sopt.geonppang.presentation.type.MainPurposeType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.filter.MainPurposeFilterActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/spacing24" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/spacing24" />

        <ImageView
            android:id="@+id/iv_main_purpose_filter_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="34dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_purpose_filter_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:textAppearance="@style/TextAppearance.Subhead"
            android:textColor="@color/gray_300"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4/6" />

        <TextView
            android:id="@+id/tv_main_purpose_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="반가워요 바이블님 :)\n건빵을 찾은 이유를 알려주세요!"
            android:textAppearance="@style/TextAppearance.Title1"
            android:textColor="@color/gray_700"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/iv_main_purpose_filter_arrow_left" />

        <include
            android:id="@+id/include_main_purpose_health"
            layout="@layout/view_main_purpose_button"
            selected="@{viewModel.mainPurpose == MainPurposeType.HEALTH}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="@{() -> viewModel.setMainPurpose(MainPurposeType.HEALTH)}"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_purpose_filter_title"
            app:mainPurposeType="@{MainPurposeType.HEALTH}" />

        <include
            android:id="@+id/include_main_purpose_diet"
            layout="@layout/view_main_purpose_button"
            selected="@{viewModel.mainPurpose == MainPurposeType.DIET}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> viewModel.setMainPurpose(MainPurposeType.DIET)}"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/include_main_purpose_health"
            app:mainPurposeType="@{MainPurposeType.DIET}" />

        <include
            android:id="@+id/include_main_purpose_vegan"
            layout="@layout/view_main_purpose_button"
            selected="@{viewModel.mainPurpose == MainPurposeType.VEGAN}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="@{() -> viewModel.setMainPurpose(MainPurposeType.VEGAN)}"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@+id/include_main_purpose_diet"
            app:mainPurposeType="@{MainPurposeType.VEGAN}" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_main_purpose_filter_next"
            style="@style/Widget.FullButton.Basic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@{viewModel.mainPurpose == null ? @color/gray_200 : @color/main_2}"
            android:enabled="@{viewModel.mainPurpose != null}"
            android:paddingVertical="18dp"
            android:text="@string/filter_next"
            android:textAppearance="@style/TextAppearance.Headline"
            android:textColor="@{viewModel.mainPurpose == null ? @color/gray_400 : @color/gray_100}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>